{
    "name": "Node.js & TypeScript",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "installUsingPython": true,
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/go:1": {
            "version": "1.19"
        },
        "ghcr.io/devcontainers/features/terraform:1": {
            "version": "1.5.4",
            "tflint": "latest",
            "terragrunt": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/tfcdk-cli:1": {
            "version": "0.17.3"
        },
        "ghcr.io/devcontainers-contrib/features/jest:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers-contrib/features/projen:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "ms-vscode.azurecli",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "hashicorp.terraform",
                "ms-vscode.vscode-typescript-next",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "editor.defaultFormatter": "dbaeumer.vscode-eslint",
                "editor.formatOnSave": true
            }
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y vim python3 python3-pip && npm install"
}
